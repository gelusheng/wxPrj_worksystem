.cont{
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  width: 100%;
  justify-content:center;
}

.grid{
  display: flex;
  flex-direction: column;
  width: 33%;
  height: 240rpx;
  background: white;
  border-right:1px solid #ddd;
  border-bottom:1px solid #ddd;
  align-items: center;
  justify-content:center;
  font-size:32rpx;
}

.grid-last{
  display: flex;
  flex-direction: column;
  width: 33%;
  height: 240rpx;
  background: white;
  border-bottom:1px solid #ddd;
  align-items: center;
  justify-content:center;
  font-size:32rpx;
}

.hover{
  background-color: #d3d3d3;
}