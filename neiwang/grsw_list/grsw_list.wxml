<!--neiwang/grsw_list/grsw_list.wxml-->
<view class="section">
  <view class="section-left">
    <label>发送人</label>
  </view>
  <view class="section-right">
    <input placeholder="按发件人搜索" />
  </view>
</view>
<view class="section">
  <view class="section-left">
    <label>标题</label>
  </view>
  <view class="section-right">
    <input placeholder="按标题搜索" />
  </view>
</view>
<button type="primary" bindtap="submit" class="btn">搜索</button>
<block wx:for="{{pageData}}" wx:key="index">
  <view class="news-list" bindtap="grswDetail" data-id="{{item[0]}}">
    <label class="news-content">{{item[1]}}</label>
    <view class="news-info">
      <label class="news-auth">{{item[2]}}</label>
      <label class="news-dt">{{item[3]}}</label>
    </view>
  </view>
</block>