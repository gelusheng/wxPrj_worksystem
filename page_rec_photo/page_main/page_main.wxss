/* pages/page_ggw/page_ggw_add.wxss */
.section{
  display: flex;
  flex:1;
  flex-direction:column;
  background:#fff;
}
.form-row{
  display: flex;
  flex-direction:row;
}
.form-row-item{
  display: flex;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
  flex:2;
}
.form-row-label-view{
  display: flex;
  justify-content:center;
  align-items:center;
  padding: 20rpx;
  flex-direction: column;
  flex:1;
}

.form-row-item-image-area{
  display: flex;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
}
.form-row-picker{
  display:flex;
  flex:1;
  background:#fff;
  border:1px solid #ddd;
}

.picker-text{
  background:#fefefe;
  display:flex;
  justify-content:center;
  align-items:center;
  width:430rpx;
  height:75rpx;
}
.form-row-input{
  display:flex;
  flex:1;
  background:#fff;
  border:1px solid #ddd;
  padding:16rpx;
}

.form-row-item-image{
  border:1px solid #eee;
  flex-grow:1;
  width:100rpx;height:160rpx;
}
.flex1{
  flex:1;
}
.flex2{
  flex:2;
}
.section_title{
  display: flex;
  justify-content:center;
  align-content:center;
  font-size: 14px;
  padding:10px;
  background:#ddd;
}

.form_style{
  display: flex;
  flex-direction:column;
}


.log-list {
  display: flex;
  flex-direction: column;
}

.item-block{
  flex:1;
  flex-grow: 1;
}
.item-box{
  flex-direction: column;
  display: flex;
  width:730rpx;
  margin-left:10rpx;
  border-bottom:1px solid #ddd;
  align-items:flex-start;
}

.item-top{
  flex-direction: row;
  height:39rpx;
  align-items:flex-start;
  align-content:center;
}

.fontBold{font-weight:bold;}
.text36{font-size:36rpx;}
.text24{font-size:24rpx;}
.color_gray{color:#999;}
.color_red{color:red;}
.color_blue{color:#4B8BF5;}
.form-row-item-image-area{
  display: flex;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
  flex-direction: row;
}
.form-row-item-image{
  border:1px solid #eee;
  flex:1;
  height:180rpx;
  width:180rpx;
}

.form-row-item-image-small{
  border:1px solid #ddd;
  flex:1;
  height:110rpx;
  width:110rpx;
}

.form-row-item-image-small-blue{
  border:1px solid #ddd;
  flex:1;
  height:110rpx;
  width:110rpx;
  margin-left:10rpx;
}
.btn_show{
  margin-left:16rpx;
  display:block;
  width:150rpx;
  background:#FFCE44;
}

.hide{
  display:none;
}